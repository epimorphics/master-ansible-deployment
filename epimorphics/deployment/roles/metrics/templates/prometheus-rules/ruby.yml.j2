---
groups:
- name: app_ruby.rules
  rules:
  - alert: APIConnectionError
    expr: rate(api_connection_failures[10m]) > 0
    labels:
      severity: critical
    annotations:
{%- raw %}
      message: "API Connection Error: {{ $labels.job }} - {{ $labels.instance }}"
{% endraw %}
      runbook_url: "https://github.com/epimorphics/master-ansible-deployment/blob/main/epimorphics/deployment/roles/metrics/templates/prometheus-rules/Readme.md#apiconnectionerror"
  - alert: APIServiceException
    expr: rate(api_service_exception[10m]) > 0
    labels:
      severity: critical
    annotations:
{%- raw %}
      message: "API Service Exception: {{ $labels.job }} - {{ $labels.instance }}"
{% endraw %}
      runbook_url: "https://github.com/epimorphics/master-ansible-deployment/blob/main/epimorphics/deployment/roles/metrics/templates/prometheus-rules/Readme.md#apiserviceexception"
  - alert: APIStatus
    expr: rate(api_status{status=~"[45].."}[10m]) > 0
    labels:
      severity: warning
    annotations:
{%- raw %}
      message: "Unexpected API status return {{ $labels.status }}: {{ $labels.job }} - {{ $labels.instance }}"
{% endraw %}
      runbook_url: "https://github.com/epimorphics/master-ansible-deployment/blob/main/epimorphics/deployment/roles/metrics/templates/prometheus-rules/Readme.md#apistatus"
  - alert: APIRequestFailures
    expr: rate(api_request_failures{result!="success"}[10m]) > 0
    labels:
      severity: critical
    annotations:
{%- raw %}
      message: "API Request Failure: {{ $labels.result }}: {{ $labels.job }} - {{ $labels.instance }}"
{% endraw %}
      runbook_url: "https://github.com/epimorphics/master-ansible-deployment/blob/main/epimorphics/deployment/roles/metrics/templates/prometheus-rules/Readme.md#apirequestfailures"
  - alert: ApplicationInternalError
    expr: rate(internal_application_error[10m]) > 0
    labels:
      severity: critical
    annotations:
{%- raw %}
      message: "Internal Application Error: {{ $labels.job }} - {{ $labels.instance }}"
{% endraw %}
      runbook_url: "https://github.com/epimorphics/master-ansible-deployment/blob/main/epimorphics/deployment/roles/metrics/templates/prometheus-rules/Readme.md#applicationinternalerror"
